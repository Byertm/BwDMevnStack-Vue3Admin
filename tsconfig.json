{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@components/*": ["./src/components/*"],
			"@services/*": ["./src/services/*"],
			"@helpers/*": ["./src/helpers/*"],
			"@plugins/*": ["./src/plugins/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@stores/*": ["./src/stores/*"],
			"@router/*": ["./src/router/*"],
			"@models/*": ["./src/models/*"],
			"@views/*": ["./src/views/*"],
			"@public/*": ["./public/*"],
			"@utils/*": ["./src/utils/*"],
			"@data/*": ["./data/*"],
			"@dist/*": ["./dist/*"],
			"@src/*": ["./src/*"],
			"@/*": ["./src/*"],
			"~/*": ["./*"],
			"@nodemodules/*": ["./nodemodules/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.node.json" }]
}